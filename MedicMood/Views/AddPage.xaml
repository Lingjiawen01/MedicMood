<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:MedicMood.Views"
             x:Class="MedicMood.Views.AddPage">

    <StackLayout Margin="20,35,20,20">
        <Label Text="Time:" />
        <TimePicker x:Name="alarmTimePicker" Time="{Binding Time}" Format="T" />
        <Label Text="Date:" />
        <DatePicker x:Name="alarmDatePicker" Date="{Binding Date}" Format="T" />


        <StackLayout Orientation="Horizontal">
            <Label Text="On:" />
            <Switch x:Name="workSwitch" HorizontalOptions="StartAndExpand" IsToggled="{Binding Work}" />
        </StackLayout>

        <Label Text="Your Medicine:" />
        <Editor x:Name="noteEditor" Placeholder="Enter" Text="{Binding Note}" MaxLength="300" HeightRequest="100" />

        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button Text="Save" Clicked="SetAlarmButton_Clicked" />
            <Button Grid.Column="1" Text="Delete" Clicked="DeleteAlarmButton_Clicked" />
        </Grid>
    </StackLayout>
</ContentPage>