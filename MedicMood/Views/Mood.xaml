<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicMood.Views.Mood"
             Title="Mood Tracking">

    <StackLayout Margin="20">
        <Label Text="Select Your Mood Today" />
        <Picker x:Name="moodPicker">
            <Picker.Items>
                <x:String>😊 Happy</x:String>
                <x:String>😢 Sad</x:String>
                <x:String>😡 Angry</x:String>
                <x:String>😐 Poker face</x:String>
                <!-- Add more mood options as needed -->
            </Picker.Items>
        </Picker>
        
        <Button Text="Save" Clicked="SaveButton_Clicked" />
    </StackLayout>

</ContentPage>