<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicMood.Views.Clockpage"
             xmlns:views="clr-namespace:MedicMood.Views"
             xmlns:helpers="clr-namespace:MedicMood.Helpers" 
             Title="Clock"
             Padding="20"
             BackgroundColor="#B6D0E2">

    <ScrollView>

        <StackLayout>
            <Button BackgroundColor="LightSteelBlue"
                    CornerRadius="45"
                    HeightRequest="32"
                    WidthRequest="32"
                    HorizontalOptions="End">
                <Button.ImageSource>
                    <FontImageSource
                        FontFamily="FAS"
                        Glyph="{x:Static helpers:FontAwesomeHelper.Gear}"
                        Size="18" />
                </Button.ImageSource>
            </Button>


            <Grid ColumnDefinitions="*,150,*"
                  RowDefinitions="Auto,*,Auto"
                  BackgroundColor="DeepSkyBlue">
                <VerticalStackLayout Grid.Row="1"
                                     Grid.Column="1"
                                     HorizontalOptions="Center"
                                     VerticalOptions="Center"
                                     Spacing="20">

                    <ListView x:Name="alarmListView">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextCell Text="{Binding Label}" Detail="{Binding Time}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>

                    <Button Clicked="OnButtonClicked">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FAS"
                                Glyph="{x:Static helpers:FontAwesomeHelper.Plus}"
                                Size="30" />
                        </Button.ImageSource>
                    </Button>
                    <Button Clicked="DeleteAlarm_Clicked" >
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FAS"
                                Glyph="{x:Static helpers:FontAwesomeHelper.TrashCan}"
                                Size="25" />
                        </Button.ImageSource>

                    </Button>


                    <!--<Label Text="1750 Am"
                           FontSize="25"
                           FontAttributes="Bold"
                           VerticalOptions="Center"/>

                    <Button HorizontalOptions="End"
                            Clicked="DeleteAlarm_Clicked">
                        <Button.ImageSource>
                            <FontImageSource
                                FontFamily="FAS"
                                Glyph="{x:Static helpers:FontAwesomeHelper.Trash}"
                                Size="18" />
                        </Button.ImageSource>
                    </Button>
                    --><!-- Add a ListView to display the list of alarms --><!--
                    <ListView ItemsSource="{Binding Alarms}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                --><!-- Define the alarm item layout --><!--
                                <TextCell Text="{Binding Label}" Detail="{Binding Time}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>-->

                    <!--<Button Text="Add Alarm"
                            BackgroundColor="LightSteelBlue"
                            TextColor="Black"
                            FontAttributes="Bold"
                            CornerRadius="22"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"
                            Padding="50,0"
                            Clicked="OnButtonClicked"/>-->
                </VerticalStackLayout>

            </Grid>

        </StackLayout>

    </ScrollView>
</ContentPage>