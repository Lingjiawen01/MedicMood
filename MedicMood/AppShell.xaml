<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MedicMood.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedicMood"
    xmlns:views="clr-namespace:MedicMood.Views"
    xmlns:model="clr-namesapce:MedicMood.DataModel"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Clock"
             Icon="clock.png">
            <ShellContent ContentTemplate="{DataTemplate views:Clockpage}"
                          Route="Clockpage"/>
        </Tab>

        <Tab Title="Dashboard"
             Icon="dashboard.png">
            <ShellContent ContentTemplate="{DataTemplate views:Dashboard}"/>
        </Tab>

    </TabBar>

</Shell>
